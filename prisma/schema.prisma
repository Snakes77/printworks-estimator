generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  company   String?
  quotes    Quote[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  quotes    Quote[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RateCard {
  id         String         @id @default(cuid())
  code       String         @unique
  name       String
  unit       String
  notes      String?
  category   QuoteCategory? // Categorize each rate card
  bands      Band[]
  quoteLines QuoteLine[]
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

model Band {
  id               String   @id @default(cuid())
  rateCardId       String
  fromQty          Int
  toQty            Int
  pricePerThousand Decimal @db.Decimal(10, 2)
  makeReadyFixed   Decimal @db.Decimal(10, 2)
  RateCard         RateCard @relation(fields: [rateCardId], references: [id], onDelete: Cascade)
}

enum QuoteStatus {
  DRAFT
  SENT
  WON
  LOST
}

enum QuoteCategory {
  ENVELOPES
  PRINT
  DATA_PROCESSING
  PERSONALISATION
  FINISHING
  ENCLOSING
  POSTAGE
}

model Quote {
  id                 String      @id @default(cuid())
  userId             String
  clientId           String?
  clientName         String
  projectName        String
  baseReference      String?     // "Q00001" - never changes (optional for migration compatibility)
  revisionNumber     Int         @default(0) // Increments: Q00001-1, Q00001-2
  reference          String      // Computed: baseReference + "-" + revisionNumber (kept for backward compatibility)
  quantity           Int
  vatRate            Decimal     @db.Decimal(4, 2)
  discountPercentage Decimal     @default(0) @db.Decimal(5, 2)
  status             QuoteStatus @default(DRAFT)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  lines              QuoteLine[]
  pdfUrl             String?
  user               User        @relation(fields: [userId], references: [id])
  client             Client?     @relation(fields: [clientId], references: [id])
  history            QuoteHistory[]
}

model QuoteLine {
  id                   String         @id @default(cuid())
  quoteId              String
  rateCardId           String
  description          String
  quantity             Int?           // Line-specific quantity (defaults to quote quantity if null)
  unitPricePerThousand Decimal        @db.Decimal(10, 2)
  makeReadyFixed       Decimal        @db.Decimal(10, 2)
  unitsInThousands     Decimal        @db.Decimal(12, 3)
  lineTotalExVat       Decimal        @db.Decimal(12, 2)
  category             QuoteCategory? @default(PRINT) // Temporarily optional for migration
  isManualItem         Boolean        @default(false)
  manualQuantity       Decimal?       @db.Decimal(12, 3) // For envelope wastage: 53.000
  pricePerItem         Decimal?       @db.Decimal(10, 3) // For postage: Â£0.259
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  quote                Quote          @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  rateCard             RateCard       @relation(fields: [rateCardId], references: [id])
}

model QuoteHistory {
  id        String   @id @default(cuid())
  quoteId   String
  action    String
  payload   Json
  meta      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quote     Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
}

// AuditEvent is an alias for QuoteHistory - use QuoteHistory for consistency

model QuoteCounter {
  id        String   @id @default("singleton")
  lastNumber Int    @default(0)
  updatedAt DateTime @updatedAt

  @@map("quote_counter")
}
